.category-container
  .grid-container
    .hero
      .text-center.title
        h3.m-0
          span.bg-primary Todos os v√≠deos
          |  de #{@category.name}
        h5 #{@category.description}
      .grid-x.grid-padding-x
        .medium-6.cell
          = link_to(@latest_video)
            = image_tag src="#{@latest_video.image_url}"
        .medium-6.cell
          div
            h5 = @videos.first.name
            p = @videos.first.description
    .video-list.grid-x.grid-padding-x.grid-padding-y
      - unless @videos.empty?
        - @videos.each do |video|
          .medium-4.cell.img-container
            = link_to(video)
              = image_tag src="#{video.image_url}"
            h6 = video.name
      - unless @series.empty?
        - @series.each do |serie|
          .medium-4.cell.img-container
            = link_to(serie)
              = image_tag src="#{serie.videos.first.image_url}"
            h6 = serie.name
